{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out/app",
    "baseUrl": "./",
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "**/*.ts",
    "node_modules/@jovian/type-tools/**/*.ts",
    "node_modules/@jovian/type-tools-iface/**/*.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/dist/**/*",
    "**/dist-server/**/*",
    "**/dist-server-deps/**/*",
    "**/dist-electron/**/*",
    "**/dist-electron-src/**/*",
    "**/server/**/*",
    "**/destor/**/*",
    "**/*.TEMPLATE.*",
    "profiles/**/*",
    "src/assets/i18n/**/*",
    "src/assets-root/**/*",
    "src/app/ganymede/*.ts",
    "src/app/ganymede/defaults/**/*",
    "src/app/ganymede/template/**/*",
    "src/app/ganymede/electron/**/*",
    "src/app/ganymede/server/**/*",
    "src/app/ganymede/extensions/**/server/**/*",
    "src/app/electron/**/*",

    "ganymede.app.server.ts",
    "src/test.ts",
    "src/ganymede.app.interface.ts",
    "src/app/ganymede/components/util/sw/sw.ts"
  ]
}
